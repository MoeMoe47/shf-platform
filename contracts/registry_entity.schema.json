{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "shf://contracts/registry_entity.schema.json",
  "title": "SHF Registry Entity Upsert Payload",
  "type": "object",
  "additionalProperties": false,
  "required": [
    "entity",
    "reason"
  ],
  "properties": {
    "reason": {
      "type": "string",
      "minLength": 1
    },
    "entity": {
      "$ref": "#/$defs/RegistryEntity"
    }
  },
  "$defs": {
    "LifecycleStatus": {
      "type": "string",
      "enum": [
        "active",
        "deprecated",
        "retired"
      ]
    },
    "Lifecycle": {
      "type": "object",
      "additionalProperties": false,
      "required": [
        "status"
      ],
      "properties": {
        "status": {
          "$ref": "#/$defs/LifecycleStatus"
        }
      }
    },
    "Authority": {
      "type": "object",
      "additionalProperties": false,
      "required": [
        "approvedBy",
        "basis"
      ],
      "properties": {
        "approvedBy": {
          "type": "string",
          "minLength": 1
        },
        "basis": {
          "type": "string",
          "minLength": 1
        },
        "approvedAt": {
          "type": "string"
        }
      }
    },
    "Retention": {
      "type": "object",
      "additionalProperties": false,
      "required": [
        "artifactsDays",
        "auditLogsDays",
        "deletionPolicy"
      ],
      "properties": {
        "artifactsDays": {
          "type": "integer",
          "minimum": 0
        },
        "auditLogsDays": {
          "type": "integer",
          "minimum": 0
        },
        "deletionPolicy": {
          "type": "string",
          "minLength": 1
        }
      }
    },
    "Legal": {
      "type": "object",
      "additionalProperties": false,
      "required": [
        "classification",
        "dataCategory",
        "authority",
        "jurisdiction",
        "termsRef",
        "disclaimerRef",
        "retention",
        "attestations"
      ],
      "properties": {
        "classification": {
          "type": "string",
          "minLength": 1
        },
        "dataCategory": {
          "type": "array",
          "minItems": 1,
          "items": {
            "type": "string",
            "minLength": 1
          }
        },
        "authority": {
          "$ref": "#/$defs/Authority"
        },
        "jurisdiction": {
          "type": "string",
          "minLength": 1
        },
        "termsRef": {
          "type": "string",
          "minLength": 1
        },
        "disclaimerRef": {
          "type": "string",
          "minLength": 1
        },
        "retention": {
          "$ref": "#/$defs/Retention"
        },
        "attestations": {
          "type": "array",
          "items": {}
        }
      }
    },
    "Policy": {
      "type": "object",
      "additionalProperties": true,
      "properties": {
        "humanApproval": {
          "type": "boolean"
        },
        "maxSteps": {
          "type": "integer",
          "minimum": 0
        },
        "notes": {
          "type": "string"
        }
      }
    },
    "BaseEntity": {
      "type": "object",
      "required": [
        "kind",
        "id",
        "name",
        "layer",
        "lifecycle",
        "legal"
      ],
      "properties": {
        "kind": {
          "type": "string",
          "minLength": 1
        },
        "id": {
          "type": "string",
          "minLength": 1
        },
        "name": {
          "type": "string",
          "minLength": 1
        },
        "title": {
          "type": "string"
        },
        "layer": {
          "type": "string",
          "minLength": 1
        },
        "lifecycle": {
          "$ref": "#/$defs/Lifecycle"
        },
        "policy": {
          "$ref": "#/$defs/Policy"
        },
        "legal": {
          "$ref": "#/$defs/Legal"
        }
      }
    },
    "AgentEntity": {
      "allOf": [
        {
          "$ref": "#/$defs/BaseEntity"
        },
        {
          "type": "object",
          "required": [
            "kind"
          ],
          "properties": {
            "kind": {
              "const": "agent"
            },
            "agentId": {
              "type": "string"
            }
          }
        }
      ],
      "unevaluatedProperties": false,
      "type": "object"
    },
    "AppEntity": {
      "allOf": [
        {
          "$ref": "#/$defs/BaseEntity"
        },
        {
          "type": "object",
          "required": [
            "kind"
          ],
          "properties": {
            "kind": {
              "const": "app"
            },
            "entry": {
              "type": "string"
            },
            "home": {
              "type": "string"
            },
            "capabilities": {
              "type": "array",
              "items": {
                "type": "string"
              }
            }
          }
        }
      ],
      "unevaluatedProperties": false,
      "type": "object"
    },
    "RegistryEntity": {
      "oneOf": [
        {
          "$ref": "#/$defs/AgentEntity"
        },
        {
          "$ref": "#/$defs/AppEntity"
        }
      ]
    }
  }
}
