{
  "policyId": "global-compliance-policy",
  "version": "1.0.0",
  "owner": "SHF",
  "description": "Global compliance baseline for the SHF ecosystem. Downstream policies (Business/App/Agent) may only restrict; any downgrade hard-fails.",
  "allowedDataClasses": [
    "public",
    "internal",
    "confidential",
    "regulated"
  ],
  "allowedJurisdictions": [
    "US-OH"
  ],
  "allowedScopes": [
    "registry.read",
    "registry.write",
    "audit.read",
    "audit.write",
    "app.read",
    "app.write",
    "business.read",
    "business.write",
    "agent.read",
    "agent.write",
    "reporting.read",
    "reporting.write"
  ],
  "allowedDataTypes": [
    "identity_pii",
    "student_records",
    "financial_payment",
    "health_phi",
    "substance_use",
    "minor_child"
  ],
  "restrictedDataTypes": [
    "substance_use"
  ],
  "prohibitedScopes": [
    "data.export.regulated",
    "data.share.partner.regulated",
    "billing.submit",
    "clinical.diagnosis",
    "prescription.order"
  ],
  "neverExecuteActions": [
    "terminate_service",
    "deny_benefits",
    "approve_medical_necessity",
    "make_clinical_diagnosis"
  ],
  "auditLoggingRequired": true,
  "traceIdRequired": true,
  "attributionRequired": true,
  "consentRequired": true,
  "disclosureRequired": true,
  "maxRetentionDays": 365,
  "exportLimit": 0,
  "maxRiskTier": "high",
  "references": {
    "auditProfileRef": "audit-global-v1",
    "retentionPolicyRef": "retention-global-365d-v1"
  }
}
