{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "SHF App Manifest",
  "type": "object",
  "required": ["id","name","entry","routes","layout","shellCss","capabilities","contractVersion"],
  "properties": {
    "contractVersion": { "type": "integer", "minimum": 1 },
    "id": { "type": "string", "minLength": 1 },
    "name": { "type": "string", "minLength": 1 },
    "entry": { "type": "string", "minLength": 1 },
    "routes": { "type": "string", "minLength": 1 },
    "layout": { "type": "string", "minLength": 1 },
    "shellCss": { "type": "string", "minLength": 1 },
    "dashboard": { "type": "string" },
    "capabilities": {
      "type": "object",
      "additionalProperties": {
        "type": ["boolean","string","number","array","object","null"]
      }
    },
    "meta": { "type": "object" }
  },
  "additionalProperties": true
}
